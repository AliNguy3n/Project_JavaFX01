<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<GridPane fx:id="taskElement" alignment="CENTER" stylesheets="@../CSS/TaskElement.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="home.TaskElementController">
   <columnConstraints>
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="34.0" minWidth="30.0" prefWidth="34.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="NEVER" />
   </rowConstraints>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <children>
      <FontIcon fx:id="iKonTime" iconLiteral="fltfmz-shifts-activity-24" iconSize="25" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets />
         </GridPane.margin></FontIcon>
      <FontIcon fx:id="iKonCompete" iconLiteral="fltral-checkmark-underline-circle-16" iconSize="28">
         <GridPane.margin>
            <Insets />
         </GridPane.margin></FontIcon>
      <FontIcon fx:id="iKonDelay" iconLiteral="fltral-error-circle-12" iconSize="25">
         <GridPane.margin>
            <Insets />
         </GridPane.margin></FontIcon>
      <FontIcon fx:id="iKonDoing" iconLiteral="fltrmz-play-circle-24" iconSize="25">
         <GridPane.margin>
            <Insets />
         </GridPane.margin></FontIcon>
      <FontIcon fx:id="iKonContent" iconLiteral="fltrmz-tasks-app-24" iconSize="26" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets />
         </GridPane.margin></FontIcon>
      <Label fx:id="lbTaskTitle" text="Task Title" GridPane.columnIndex="1">
         <font>
            <Font name="Roboto Bold" size="14.0" />
         </font>
         <GridPane.margin>
            <Insets left="5.0" />
         </GridPane.margin>
      </Label>
      <Label fx:id="lbTaskStartEnd" text="Time Start-End" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets left="5.0" />
         </GridPane.margin></Label>
      <Label fx:id="lbTaskContent" text="Task Content" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="5.0" />
         </GridPane.margin></Label>
      <FontIcon fx:id="iKonToGo" iconLiteral="fltral-arrow-right-circle-24" iconSize="25" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.vgrow="NEVER" />
   </children>
</GridPane>
